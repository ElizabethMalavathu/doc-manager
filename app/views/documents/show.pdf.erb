<!DOCTYPE>
<html>
<head>
  <%= wicked_pdf_stylesheet_link_tag 'application.css' %>
</head>
<body>
<%- model_class = Document -%>
<div class="page-header">
  <h1><%= @document.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @document.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:background) %>:</strong></dt>
  <dd><%= @document.background %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication_date) %>:</strong></dt>
  <dd><%= @document.publication_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @document.content %></dd>
</dl>
</body>
</html>