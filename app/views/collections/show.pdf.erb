<!DOCTYPE>
<html>
<head>
  <%= wicked_pdf_stylesheet_link_tag 'application-print.css' %>
</head>
<body id="pdf">
<% @collection.documents.each do |doc| %>
<section>
  <h1><%= doc.title %></h1>
  <% if doc.author %>
  <p class="author"><i><%= doc.author.full_name %>. <%= doc.author.born_died %></i></p>
  <% end %>
  <p style="text-align:right;"><i><%= doc.publication_date.strftime("%-m %b %Y") if doc.publication_date %></i></p>

  <div class="content">
  <% doc.content.split("\n").each do |paragraph| %>
    <p><%= paragraph %></p>
  <% end %>
  </div>
  <p class="citation"><%= @collection.citation %> p <%= doc.citation %></p>
</section>
<% end %>
</body>
</html>
