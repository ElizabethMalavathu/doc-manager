<h1>Collections</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>
  <% for collection in @collections %>
    <tr>
      <td><%= collection.name %></td>
      <td><%= link_to "Show", collection %></td>
      <td><%= link_to "Get", collection_path(collection, :format => :pdf) %></td>
      <td><%= link_to "Edit", edit_collection_path(collection) %></td>
      <td><%= link_to "Destroy", collection, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Collection", new_collection_path %></p>
